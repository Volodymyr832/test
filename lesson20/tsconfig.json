{
    "compilerOptions": {
      "target": "ESNext",
      "module": "NodeNext",
      "lib": ["ESNext", "DOM"],
      "moduleResolution": "NodeNext",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "types": ["node", "cucumber"]
    },
    "include": ["features/**/*.ts", "pages/**/*.ts", "support/**/*.ts"]
  }
  