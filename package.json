{
    "name": "lesson11",
    "version": "1.0.0",
    "description": "Unit tests using Mocha, Sinon, and Jest",
    "type": "module",
    "scripts": {
        "build": "tsc",
        "start": "npx ts-node src/index.ts",
        "test:mocha": "NODE_OPTIONS=--loader=ts-node/esm npx mocha test/mocha/**/*.spec.ts",
        "test:jest": "npx jest",
        "test": "npm run test:mocha && npm run test:jest",
        "lint": "eslint . --ext .ts",
        "format": "prettier --write ."
    },
    "devDependencies": {
        "@eslint/js": "^9.21.0",
        "@jest/core": "^29.7.0",
        "@jest/reporters": "^29.7.0",
        "@jest/transform": "^29.7.0",
        "@types/chai": "^5.0.1",
        "@types/jest": "^29.5.14",
        "@types/mocha": "^10.0.10",
        "@types/node": "^22.13.5",
        "@types/sinon": "^17.0.4",
        "@typescript-eslint/eslint-plugin": "^8.25.0",
        "@typescript-eslint/parser": "^8.25.0",
        "chai": "^5.2.0",
        "eslint": "^9.21.0",
        "eslint-plugin-unicorn": "^57.0.0",
        "mocha": "^11.1.0",
        "jest": "^29.7.0",
        "sinon": "^19.0.2",
        "ts-jest": "^29.2.6",
        "ts-node": "^10.9.2",
        "typescript": "^5.7.3",
        "prettier": "^3.5.2"
    }
}